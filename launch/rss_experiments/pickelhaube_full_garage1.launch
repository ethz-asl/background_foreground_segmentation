<?xml version="1.0" encoding="utf-8"?>
<!--
Launch file for Selective ICP with rviz
-->

<launch>


	<include file="$(find background_foreground_segmentation)/launch/rss_experiments/pickelhaube_full.launch">
		<arg name="rosbag" value="/media/blumh/ext_2tb/pickelhaube_2021-01-29-15-25-45.bag" />
		<arg name="cad_file" value="$(find cpt_selective_icp)/resources/CLA_CAD_simplified_single_wall_no_ceiling.off" />
		<arg name="logprefix" value="pickelhaube_full_garage1" />
	</include>

    <node pkg="tf2_ros"
	      type="static_transform_publisher"
		  name="mesh_positioning"
		  args="3.692 -1.813 0 0 0 -0.622 0.783 map marker" />
    <node pkg="rosservice"
	      type="rosservice"
		  name="start_icp"
		  args="call --wait /mapper/load_published_map"
		  launch-prefix="bash -c 'sleep 4; $0 $@'" />

</launch>
